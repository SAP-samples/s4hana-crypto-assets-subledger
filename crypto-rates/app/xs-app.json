{
    "welcomeFile": "index.html",
    "authenticationMethod": "route",
    "websockets": {
        "enabled": true
    },
    "routes": [
        {
            "source": "^/srv/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.User",
            "destination": "srv"
        },
        {
            "source": "^/admin/(.*)$",
            "authenticationType": "xsuaa",
            "scope": "$XSAPPNAME.Admin",
            "destination": "sqlite"
        },
        {
            "source": "^/spfi/(.*)$",
            "authenticationType": "none",
            "csrfProtection": false,
            "destination": "sqlite"
        },
        {
            "source": "^/socket/(.*)$",
            "authenticationType": "none",
            "csrfProtection": false,
            "destination": "sqlite"
        },
        {
            "source": "^/sqlite/(.*)$",
            "authenticationType": "none",
            "csrfProtection": false,
            "destination": "sqlite"
        },        {
            "source": "^/oauth/(.*)$",
            "authenticationType": "none",
            "csrfProtection": false,
            "destination": "sqlite"
        },
        {
            "source": "^/(.*)",
            "authenticationType": "none",
            "localDir": "resources"
        }
    ]
}
